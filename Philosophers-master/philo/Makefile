#------------------------------------------------------------------------------#
# I N S T  V A R
#------------------------------------------------------------------------------#

CC			= 	gcc
CFLAGS		= 	-Wall -Wextra -Werror
#CDEBUG		= 	-fsanitize=address -g
#CDEBUG		= 	-fsanitize=thread -g
RM			= 	rm -rf

#------------------------------------------------------------------------------#
# F I L E
#------------------------------------------------------------------------------#

NAME		=	philo
HDR			=	./includes/
D_SRC		=	./srcs/
D_OBJ		=	./objs/
SRC_LST		=	main.c\
				utils.c\
				set_struct.c\
				philos_routine.c
SRC			=	$(addprefix $(D_SRC), $(SRC_LST))
OBJ			=	$(addprefix $(D_OBJ), $(SRC_LST:.c=.o))

#------------------------------------------------------------------------------#
# T A R G E T
#------------------------------------------------------------------------------#

$(NAME)		:	$(OBJ)
				$(CC) $(CFLAGS) $(CDEBUG) -I $(HDR) -o $(NAME) $(OBJ) -lpthread

$(D_OBJ)%.o : $(D_SRC)%.c
				@mkdir -p $(D_OBJ)
				$(CC) $(CFLAGS) $(CDEBUG) -I $(HDR) -o $@ -c $<

#------------------------------------------------------------------------------#
# R U L E
#------------------------------------------------------------------------------#

all			: 	$(NAME)

clean		:
				$(RM) $(D_OBJ)

fclean		: 	clean
				$(RM) $(NAME)

re			:	fclean all

.PHONY		:	all clean fclean re
